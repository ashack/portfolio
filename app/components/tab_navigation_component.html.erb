<div class="border-b border-gray-200">
  <nav class="-mb-px flex space-x-8" aria-label="Tabs">
    <% tabs.each do |tab| %>
      <% if tab.path %>
        <!-- Link variant -->
        <a href="<%= tab.path %>" 
           class="<%= tab.tab_classes %> whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
          <%= tab.name %>
          
          <% if tab.count %>
            <span class="<%= tab.badge_classes %> ml-2 py-0.5 px-2.5 rounded-full text-xs font-medium">
              <%= tab.count %>
            </span>
          <% end %>
          
          <% if tab.badge %>
            <span class="<%= tab.badge_class || tab.badge_classes %> ml-2 py-0.5 px-2.5 rounded-full text-xs font-medium">
              <%= tab.badge %>
            </span>
          <% end %>
        </a>
      <% else %>
        <!-- Button variant (for JS tabs) -->
        <button type="button"
                data-tab-id="<%= tab.tab_id %>"
                class="<%= tab.tab_classes %> whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
          <%= tab.name %>
          
          <% if tab.count %>
            <span class="<%= tab.badge_classes %> ml-2 py-0.5 px-2.5 rounded-full text-xs font-medium">
              <%= tab.count %>
            </span>
          <% end %>
          
          <% if tab.badge %>
            <span class="<%= tab.badge_class || tab.badge_classes %> ml-2 py-0.5 px-2.5 rounded-full text-xs font-medium">
              <%= tab.badge %>
            </span>
          <% end %>
        </button>
      <% end %>
    <% end %>
  </nav>
</div>