<% content_for :page_title, "Analytics" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="md:flex md:items-center md:justify-between">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
        Analytics Dashboard
      </h2>
      <p class="mt-1 text-sm text-gray-500">
        Platform-wide analytics and insights
      </p>
    </div>
  </div>

  <!-- Key Metrics -->
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
    <!-- Total Users -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Total Users</dt>
              <dd class="text-lg font-medium text-gray-900"><%= @total_users %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- New Users (30 days) -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">New Users (30 days)</dt>
              <dd class="text-lg font-medium text-gray-900"><%= @new_users_last_30_days %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Total Teams -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Total Teams</dt>
              <dd class="text-lg font-medium text-gray-900"><%= @total_teams %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Active Users (30 days) -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Active Users (30 days)</dt>
              <dd class="text-lg font-medium text-gray-900"><%= @active_users_last_30_days %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Charts Section -->
  <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
    <!-- User Growth Chart -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">User Growth (Last 12 Months)</h3>
        <div class="h-64 flex items-center justify-center border-2 border-dashed border-gray-300 rounded-lg">
          <div class="text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            <p class="mt-2 text-sm text-gray-500">Chart placeholder</p>
            <p class="text-xs text-gray-400">Integration with charting library needed</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Team Growth Chart -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Team Growth (Last 12 Months)</h3>
        <div class="h-64 flex items-center justify-center border-2 border-dashed border-gray-300 rounded-lg">
          <div class="text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            <p class="mt-2 text-sm text-gray-500">Chart placeholder</p>
            <p class="text-xs text-gray-400">Integration with charting library needed</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Stats Tables -->
  <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
    <!-- User Status Breakdown -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">User Status</h3>
        <div class="space-y-3">
          <% @users_by_status.each do |status, count| %>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <div class="h-2 w-2 rounded-full <%= status == 'active' ? 'bg-green-400' : status == 'inactive' ? 'bg-yellow-400' : 'bg-red-400' %>"></div>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900"><%= status.capitalize %></p>
                </div>
              </div>
              <div class="text-sm text-gray-500"><%= count %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- User Type Breakdown -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">User Types</h3>
        <div class="space-y-3">
          <% @users_by_type.each do |type, count| %>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <div class="h-2 w-2 rounded-full <%= type == 'direct' ? 'bg-blue-400' : 'bg-purple-400' %>"></div>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900"><%= type.humanize %></p>
                </div>
              </div>
              <div class="text-sm text-gray-500"><%= count %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Activity Stats -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Activity Stats</h3>
        <div class="space-y-3">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="h-2 w-2 rounded-full bg-green-400"></div>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">Recent Sign Ins</p>
              </div>
            </div>
            <div class="text-sm text-gray-500"><%= @sign_ins_last_30_days %></div>
          </div>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="h-2 w-2 rounded-full bg-blue-400"></div>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">Avg Sign In Count</p>
              </div>
            </div>
            <div class="text-sm text-gray-500"><%= @average_sign_in_count %></div>
          </div>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="h-2 w-2 rounded-full bg-purple-400"></div>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">New Teams (30d)</p>
              </div>
            </div>
            <div class="text-sm text-gray-500"><%= @new_teams_last_30_days %></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Data Tables -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Monthly Registration Data</h3>
      <div class="mt-4">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Month</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">New Users</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">New Teams</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% (@users_by_month.keys | @teams_by_month.keys).sort.reverse.each do |month| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= month.strftime("%B %Y") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= @users_by_month[month] || 0 %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= @teams_by_month[month] || 0 %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>