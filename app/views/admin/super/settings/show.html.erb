<% content_for :page_title, "System Settings" %>

<div class="px-4 sm:px-0">
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
        System Settings
      </h3>
      
      <%= form_with url: admin_super_settings_path, method: :patch, local: true do |form| %>
        <!-- General Settings -->
        <div class="space-y-6">
          <div>
            <h4 class="text-md font-medium text-gray-900">General Settings</h4>
            <p class="mt-1 text-sm text-gray-500">
              Configure general system settings and preferences.
            </p>
          </div>

          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
            <div class="sm:col-span-4">
              <%= form.label :site_name, "Site Name", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :site_name, 
                    value: "SaaS App", 
                    class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>

            <div class="sm:col-span-4">
              <%= form.label :support_email, "Support Email", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.email_field :support_email, 
                    value: "support@example.com", 
                    class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>

            <div class="sm:col-span-6">
              <%= form.label :maintenance_mode, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-2">
                <label class="inline-flex items-center">
                  <%= form.check_box :maintenance_mode, class: "rounded border-gray-300 text-indigo-600 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
                  <span class="ml-2 text-sm text-gray-600">Enable maintenance mode</span>
                </label>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-6 pt-6 border-t border-gray-200">
          <!-- User Settings -->
          <div>
            <h4 class="text-md font-medium text-gray-900">User Settings</h4>
            <p class="mt-1 text-sm text-gray-500">
              Configure user registration and authentication settings.
            </p>
          </div>

          <div class="mt-4 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
            <div class="sm:col-span-6">
              <%= form.label :allow_registration, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-2">
                <label class="inline-flex items-center">
                  <%= form.check_box :allow_registration, checked: true, class: "rounded border-gray-300 text-indigo-600 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
                  <span class="ml-2 text-sm text-gray-600">Allow new user registrations</span>
                </label>
              </div>
            </div>

            <div class="sm:col-span-6">
              <%= form.label :require_email_confirmation, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-2">
                <label class="inline-flex items-center">
                  <%= form.check_box :require_email_confirmation, checked: true, class: "rounded border-gray-300 text-indigo-600 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
                  <span class="ml-2 text-sm text-gray-600">Require email confirmation for new users</span>
                </label>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-6 pt-6 border-t border-gray-200">
          <!-- Team Settings -->
          <div>
            <h4 class="text-md font-medium text-gray-900">Team Settings</h4>
            <p class="mt-1 text-sm text-gray-500">
              Configure default settings for teams.
            </p>
          </div>

          <div class="mt-4 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
            <div class="sm:col-span-3">
              <%= form.label :default_team_trial_days, "Default Trial Period (days)", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.number_field :default_team_trial_days, 
                    value: 14, 
                    class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :max_team_members, "Default Max Team Members", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.number_field :max_team_members, 
                    value: 5, 
                    class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-6 pt-6 border-t border-gray-200">
          <!-- Notification Settings -->
          <div>
            <h4 class="text-md font-medium text-gray-900">Notification Settings</h4>
            <p class="mt-1 text-sm text-gray-500">
              Configure system-wide notification preferences.
            </p>
          </div>

          <div class="mt-4 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
            <div class="sm:col-span-6">
              <%= form.label :send_welcome_email, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-2">
                <label class="inline-flex items-center">
                  <%= form.check_box :send_welcome_email, checked: true, class: "rounded border-gray-300 text-indigo-600 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
                  <span class="ml-2 text-sm text-gray-600">Send welcome email to new users</span>
                </label>
              </div>
            </div>

            <div class="sm:col-span-6">
              <%= form.label :send_admin_notifications, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-2">
                <label class="inline-flex items-center">
                  <%= form.check_box :send_admin_notifications, checked: true, class: "rounded border-gray-300 text-indigo-600 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
                  <span class="ml-2 text-sm text-gray-600">Send notifications to admins for important events</span>
                </label>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-6 pt-6 border-t border-gray-200">
          <div class="flex justify-end">
            <%= form.submit "Save Settings", 
                class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Additional Settings Sections -->
  <div class="mt-8 bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        Advanced Settings
      </h3>
      <div class="mt-2 max-w-xl text-sm text-gray-500">
        <p>Additional system configuration options.</p>
      </div>
      <div class="mt-5">
        <div class="rounded-md bg-yellow-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <%= icon "warning", class: "h-5 w-5 text-yellow-400" %>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-yellow-800">
                Caution
              </h3>
              <div class="mt-2 text-sm text-yellow-700">
                <p>
                  Advanced settings can affect system stability. Make changes carefully.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>