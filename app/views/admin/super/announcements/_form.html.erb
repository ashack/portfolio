<%= form_with(model: [:admin, :super, announcement], local: true) do |form| %>
  <% if announcement.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <%= icon "x-circle", class: "h-5 w-5 text-red-400" %>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            There were <%= pluralize(announcement.errors.count, "error") %> with your submission
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% announcement.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <!-- Title -->
    <div>
      <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :title, 
          class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md",
          placeholder: "e.g., Scheduled Maintenance" %>
      <p class="mt-2 text-sm text-gray-500">A brief, descriptive title for the announcement.</p>
    </div>

    <!-- Message -->
    <div>
      <%= form.label :message, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :message, 
          rows: 4,
          class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md",
          placeholder: "Enter your announcement message here..." %>
      <p class="mt-2 text-sm text-gray-500">The main content of your announcement. This will be displayed to users.</p>
    </div>

    <!-- Style -->
    <div>
      <%= form.label :style, class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :style, 
          options_for_select([
            ['Info (Blue)', 'info'],
            ['Success (Green)', 'success'],
            ['Warning (Yellow)', 'warning'],
            ['Danger (Red)', 'danger']
          ], announcement.style),
          {},
          class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" %>
      <p class="mt-2 text-sm text-gray-500">Choose a style that matches the nature of your announcement.</p>
    </div>

    <!-- Schedule -->
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div>
        <%= form.label :starts_at, "Start Date & Time", class: "block text-sm font-medium text-gray-700" %>
        <%= form.datetime_local_field :starts_at, 
            value: announcement.starts_at&.strftime('%Y-%m-%dT%H:%M'),
            class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        <p class="mt-2 text-sm text-gray-500">When should this announcement become visible?</p>
      </div>

      <div>
        <%= form.label :ends_at, "End Date & Time (Optional)", class: "block text-sm font-medium text-gray-700" %>
        <%= form.datetime_local_field :ends_at, 
            value: announcement.ends_at&.strftime('%Y-%m-%dT%H:%M'),
            class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        <p class="mt-2 text-sm text-gray-500">Leave blank for no end date.</p>
      </div>
    </div>

    <!-- Options -->
    <div class="space-y-4">
      <div class="relative flex items-start">
        <div class="flex items-center h-5">
          <%= form.check_box :dismissible, 
              class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
        </div>
        <div class="ml-3 text-sm">
          <%= form.label :dismissible, class: "font-medium text-gray-700" %>
          <p class="text-gray-500">Allow users to dismiss this announcement</p>
        </div>
      </div>

      <div class="relative flex items-start">
        <div class="flex items-center h-5">
          <%= form.check_box :published, 
              class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
        </div>
        <div class="ml-3 text-sm">
          <%= form.label :published, class: "font-medium text-gray-700" %>
          <p class="text-gray-500">Publish this announcement (will send notifications to all users)</p>
        </div>
      </div>
    </div>

    <!-- Preview -->
    <div>
      <h3 class="text-sm font-medium text-gray-700 mb-2">Preview</h3>
      <div id="announcement-preview" class="border border-gray-300 rounded-md p-4">
        <div data-announcement-preview-target="content" class="px-4 py-3 rounded-lg border relative">
          <span data-announcement-preview-target="title" class="font-semibold">Your announcement title will appear here</span>
          <p data-announcement-preview-target="message" class="mt-1">Your announcement message will appear here</p>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-6 flex items-center justify-end space-x-3">
    <%= link_to "Cancel", admin_super_announcements_path, 
        class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>

<script>
  // Live preview functionality
  document.addEventListener('DOMContentLoaded', function() {
    const titleInput = document.getElementById('announcement_title');
    const messageInput = document.getElementById('announcement_message');
    const styleSelect = document.getElementById('announcement_style');
    const previewContent = document.querySelector('[data-announcement-preview-target="content"]');
    const previewTitle = document.querySelector('[data-announcement-preview-target="title"]');
    const previewMessage = document.querySelector('[data-announcement-preview-target="message"]');

    function updatePreview() {
      // Update text
      previewTitle.textContent = titleInput.value || 'Your announcement title will appear here';
      previewMessage.textContent = messageInput.value || 'Your announcement message will appear here';
      
      // Update style
      previewContent.className = 'px-4 py-3 rounded-lg border relative ';
      switch(styleSelect.value) {
        case 'info':
          previewContent.className += 'bg-blue-50 border-blue-200 text-blue-800';
          break;
        case 'success':
          previewContent.className += 'bg-green-50 border-green-200 text-green-800';
          break;
        case 'warning':
          previewContent.className += 'bg-yellow-50 border-yellow-200 text-yellow-800';
          break;
        case 'danger':
          previewContent.className += 'bg-red-50 border-red-200 text-red-800';
          break;
        default:
          previewContent.className += 'bg-gray-50 border-gray-200 text-gray-800';
      }
    }

    titleInput.addEventListener('input', updatePreview);
    messageInput.addEventListener('input', updatePreview);
    styleSelect.addEventListener('change', updatePreview);
    
    // Initial preview
    updatePreview();
  });
</script>