<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="mb-8 flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">System Notifications</h1>
      <p class="mt-2 text-sm text-gray-600">Manage and send notifications to users</p>
    </div>
    <div>
      <%= link_to new_admin_super_notification_path, 
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        <%= icon("plus", class: "h-5 w-5 mr-2 -ml-1") %>
        Send Notification
      <% end %>
    </div>
  </div>

  <!-- Notification Events List -->
  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <% if @notifications.any? %>
      <ul class="divide-y divide-gray-200">
        <% @notifications.each do |event| %>
          <li>
            <%= link_to admin_super_notification_path(event), class: "block hover:bg-gray-50 px-4 py-4 sm:px-6" do %>
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center">
                      <%= icon("bell", class: "h-5 w-5 text-indigo-600") %>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900">
                      <%= event.type.gsub('Notifier', '') %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= truncate(event.params[:message] || event.params[:title] || "Notification", length: 100) %>
                    </div>
                    <div class="mt-1 text-xs text-gray-500">
                      Sent <%= time_ago_in_words(event.created_at) %> ago to <%= pluralize(event.notifications_count, 'recipient') %>
                    </div>
                  </div>
                </div>
                <div class="flex items-center">
                  <% if event.params[:priority] == 'high' || event.params[:priority] == 'critical' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 mr-2">
                      <%= event.params[:priority] %>
                    </span>
                  <% end %>
                  <%= icon("caret-right", class: "h-5 w-5 text-gray-400") %>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="text-center py-12">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-100 mb-4">
          <%= icon("bell-slash", class: "h-8 w-8 text-gray-400") %>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-1">No notifications sent yet</h3>
        <p class="text-sm text-gray-500">Send your first notification to users</p>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <% if @pagy.pages > 1 %>
    <div class="mt-6">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>