<div class="min-h-screen bg-gray-100 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h1 class="text-3xl font-bold text-gray-900">Devise Views with Tailwind CSS</h1>
      <p class="mt-2 text-lg text-gray-600">All authentication pages have been styled with modern Tailwind CSS</p>
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <!-- Sign In -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900">Sign In</h3>
          <p class="mt-1 text-sm text-gray-500">Login page for existing users</p>
          <div class="mt-3">
            <%= link_to "View Sign In", new_user_session_path, class: "text-blue-600 hover:text-blue-500 font-medium" %>
          </div>
        </div>
      </div>

      <!-- Sign Up -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900">Sign Up</h3>
          <p class="mt-1 text-sm text-gray-500">Registration page for new users</p>
          <div class="mt-3">
            <%= link_to "View Sign Up", new_user_registration_path, class: "text-blue-600 hover:text-blue-500 font-medium" %>
          </div>
        </div>
      </div>

      <!-- Password Reset -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900">Forgot Password</h3>
          <p class="mt-1 text-sm text-gray-500">Request password reset instructions</p>
          <div class="mt-3">
            <%= link_to "View Password Reset", new_user_password_path, class: "text-blue-600 hover:text-blue-500 font-medium" %>
          </div>
        </div>
      </div>

      <!-- Email Confirmation -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900">Email Confirmation</h3>
          <p class="mt-1 text-sm text-gray-500">Resend confirmation instructions</p>
          <div class="mt-3">
            <%= link_to "View Confirmation", new_user_confirmation_path, class: "text-blue-600 hover:text-blue-500 font-medium" %>
          </div>
        </div>
      </div>

      <!-- Account Unlock -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900">Account Unlock</h3>
          <p class="mt-1 text-sm text-gray-500">Request unlock instructions</p>
          <div class="mt-3">
            <%= link_to "View Unlock", new_user_unlock_path, class: "text-blue-600 hover:text-blue-500 font-medium" %>
          </div>
        </div>
      </div>

      <!-- Edit Profile -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900">Edit Profile</h3>
          <p class="mt-1 text-sm text-gray-500">Account settings page (requires login)</p>
          <div class="mt-3">
            <% if user_signed_in? %>
              <%= link_to "View Profile Settings", edit_user_registration_path, class: "text-blue-600 hover:text-blue-500 font-medium" %>
            <% else %>
              <span class="text-gray-400">Login required</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

