<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Admin - SaaS App" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50">
    <!-- Flash Messages -->
    <% if flash[:notice].present? %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4 mx-4 mt-4" role="alert">
        <span class="block sm:inline"><%= flash[:notice] %></span>
        <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
          <svg class="fill-current h-6 w-6 text-green-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
        </span>
      </div>
    <% end %>
    
    <% if flash[:alert].present? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4 mx-4 mt-4" role="alert">
        <span class="block sm:inline"><%= flash[:alert] %></span>
        <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
          <svg class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
        </span>
      </div>
    <% end %>

    <div class="min-h-screen flex">
      <!-- Sidebar -->
      <div class="bg-gray-800 text-white w-64 space-y-6 py-7 px-2 absolute inset-y-0 left-0 transform -translate-x-full md:relative md:translate-x-0 transition duration-200 ease-in-out">
        <!-- Logo -->
        <div class="text-white flex items-center space-x-2 px-4">
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
            <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>
          </svg>
          <span class="text-2xl font-extrabold">Admin Panel</span>
        </div>

        <!-- Navigation -->
        <nav class="mt-10">
          <% if current_user.super_admin? %>
            <%= link_to admin_super_root_path, class: "#{request.path.start_with?('/admin/super') ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white'} group flex items-center px-2 py-2 text-base font-medium rounded-md mb-1" do %>
              <svg class="mr-4 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
              </svg>
              Super Admin
            <% end %>
            
            <div class="ml-4 space-y-1">
              <%= link_to "Dashboard", admin_super_root_path, class: "#{request.path == admin_super_root_path ? 'bg-gray-700' : ''} text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-sm font-medium" %>
              <%= link_to "Teams", admin_super_teams_path, class: "#{request.path.include?('/admin/super/teams') ? 'bg-gray-700' : ''} text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-sm font-medium" %>
              <%= link_to "Users", admin_super_users_path, class: "#{request.path.include?('/admin/super/users') ? 'bg-gray-700' : ''} text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-sm font-medium" %>
            </div>
          <% end %>

          <% if current_user.site_admin? || current_user.super_admin? %>
            <%= link_to admin_site_root_path, class: "#{request.path.start_with?('/admin/site') ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white'} group flex items-center px-2 py-2 text-base font-medium rounded-md mb-1 mt-4" do %>
              <svg class="mr-4 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Site Admin
            <% end %>
            
            <div class="ml-4 space-y-1">
              <%= link_to "Dashboard", admin_site_root_path, class: "#{request.path == admin_site_root_path ? 'bg-gray-700' : ''} text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-sm font-medium" %>
              <%= link_to "Users", admin_site_users_path, class: "#{request.path.include?('/admin/site/users') ? 'bg-gray-700' : ''} text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-sm font-medium" %>
              <%= link_to "Teams", admin_site_teams_path, class: "#{request.path.include?('/admin/site/teams') ? 'bg-gray-700' : ''} text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-sm font-medium" %>
            </div>
          <% end %>
        </nav>

        <!-- User Menu -->
        <div class="absolute bottom-0 left-0 right-0 p-4 bg-gray-700">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-gray-500 rounded-full flex items-center justify-center">
                <span class="text-sm font-medium text-white"><%= current_user.email.first.upcase %></span>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-white"><%= current_user.email %></p>
              <p class="text-xs text-gray-400"><%= current_user.system_role.humanize %></p>
            </div>
          </div>
          <div class="mt-3">
            <%= link_to "Back to App", root_path, class: "text-gray-400 hover:text-white text-sm" %>
            <span class="text-gray-500">â€¢</span>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "text-gray-400 hover:text-white text-sm" %>
          </div>
        </div>
      </div>

      <!-- Main Content -->
      <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Top bar -->
        <header class="bg-white shadow-sm border-b border-gray-200">
          <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between">
              <h1 class="text-2xl font-bold text-gray-900">
                <%= content_for?(:page_title) ? yield(:page_title) : "Admin Dashboard" %>
              </h1>
              <div class="flex items-center space-x-4">
                <%= yield :header_actions %>
              </div>
            </div>
          </div>
        </header>

        <!-- Page Content -->
        <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-50">
          <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            <%= yield %>
          </div>
        </main>
      </div>
    </div>
  </body>
</html>