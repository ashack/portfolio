<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Admin - SaaS App" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50">
    <!-- Simple Top Navigation -->
    <%= render "shared/simple_top_navigation" %>
    
    <div class="flex h-screen pt-16">
      <!-- Sidebar -->
      <div class="bg-gray-900 text-white w-64 flex flex-col fixed inset-y-0 left-0 transform -translate-x-full md:relative md:translate-x-0 transition duration-200 ease-in-out" id="sidebar">
        <!-- App Header -->
        <div class="flex h-16 shrink-0 items-center px-6">
          <span class="text-xl font-semibold text-white">SaaS App</span>
        </div>

        <!-- Navigation -->
        <nav class="flex flex-1 flex-col px-6 pb-4">
          <ul role="list" class="flex flex-1 flex-col gap-y-7">
            <li>
              <ul role="list" class="-mx-2 space-y-1">
                <% if current_user.super_admin? %>
                  <%= link_to admin_super_root_path, class: "#{current_page?(admin_super_root_path) ? 'bg-gray-800 text-white' : 'text-gray-400 hover:bg-gray-800 hover:text-white'} group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6" do %>
                    <%= icon "chart-pie", class: "h-6 w-6 shrink-0" %>
                    Dashboard
                  <% end %>

                  <%= link_to admin_super_teams_path, class: "#{request.path.include?('/admin/super/teams') ? 'bg-gray-800 text-white' : 'text-gray-400 hover:bg-gray-800 hover:text-white'} group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6" do %>
                    <%= icon "users-three", class: "h-6 w-6 shrink-0" %>
                    Teams
                  <% end %>

                  <%= link_to admin_super_enterprise_groups_path, class: "#{request.path.include?('/admin/super/enterprise_groups') ? 'bg-gray-800 text-white' : 'text-gray-400 hover:bg-gray-800 hover:text-white'} group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6" do %>
                    <%= icon "buildings", class: "h-6 w-6 shrink-0" %>
                    Enterprise Groups
                  <% end %>

                  <%= link_to admin_super_users_path, class: "#{request.path.include?('/admin/super/users') ? 'bg-gray-800 text-white' : 'text-gray-400 hover:bg-gray-800 hover:text-white'} group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6" do %>
                    <%= icon "users", class: "h-6 w-6 shrink-0" %>
                    Users
                  <% end %>

                  <%= link_to admin_super_settings_path, class: "#{current_page?(admin_super_settings_path) ? 'bg-gray-800 text-white' : 'text-gray-400 hover:bg-gray-800 hover:text-white'} group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6" do %>
                    <%= icon "gear", class: "h-6 w-6 shrink-0" %>
                    Settings
                  <% end %>
                <% elsif current_user.site_admin? %>
                  <%= link_to admin_site_root_path, class: "#{current_page?(admin_site_root_path) ? 'bg-gray-800 text-white' : 'text-gray-400 hover:bg-gray-800 hover:text-white'} group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6" do %>
                    <%= icon "chart-pie", class: "h-6 w-6 shrink-0" %>
                    Dashboard
                  <% end %>

                  <%= link_to admin_site_users_path, class: "#{request.path.include?('/admin/site/users') ? 'bg-gray-800 text-white' : 'text-gray-400 hover:bg-gray-800 hover:text-white'} group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6" do %>
                    <%= icon "users", class: "h-6 w-6 shrink-0" %>
                    User Management
                  <% end %>

                  <%= link_to admin_site_teams_path, class: "#{request.path.include?('/admin/site/teams') ? 'bg-gray-800 text-white' : 'text-gray-400 hover:bg-gray-800 hover:text-white'} group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6" do %>
                    <%= icon "users-three", class: "h-6 w-6 shrink-0" %>
                    Teams
                  <% end %>

                  <%= link_to admin_site_support_index_path, class: "#{request.path.include?('/admin/site/support') ? 'bg-gray-800 text-white' : 'text-gray-400 hover:bg-gray-800 hover:text-white'} group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6" do %>
                    <%= icon "headset", class: "h-6 w-6 shrink-0" %>
                    Support
                  <% end %>

                  <%= link_to admin_site_profile_path, class: "#{request.path.include?('/admin/site/profile') ? 'bg-gray-800 text-white' : 'text-gray-400 hover:bg-gray-800 hover:text-white'} group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6" do %>
                    <%= icon "user", class: "h-6 w-6 shrink-0" %>
                    My Profile
                  <% end %>
                <% end %>
              </ul>
            </li>

            <li>
              <div class="text-xs font-semibold leading-6 text-gray-400">Analytics</div>
              <ul role="list" class="-mx-2 mt-2 space-y-1">
                <%= link_to blazer_path, class: "text-gray-400 hover:bg-gray-800 hover:text-white group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6" do %>
                  <%= icon "chart-line", class: "h-6 w-6 shrink-0" %>
                  Blazer Reports
                <% end %>
              </ul>
            </li>
          </ul>
        </nav>
      </div>

      <!-- Main Content -->
      <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Mobile menu button -->
        <div class="md:hidden fixed top-16 left-0 z-40">
          <button data-controller="sidebar" data-action="click->sidebar#toggle" class="m-2 p-2 rounded-md bg-gray-900 text-gray-400 hover:text-white hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white">
            <span class="sr-only">Open sidebar</span>
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
        
        <!-- Flash Messages -->
        <% if flash[:notice].present? %>
          <div class="mx-4 mt-4">
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
              <span class="block sm:inline"><%= flash[:notice] %></span>
            </div>
          </div>
        <% end %>
        
        <% if flash[:alert].present? %>
          <div class="mx-4 mt-4">
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
              <span class="block sm:inline"><%= flash[:alert] %></span>
            </div>
          </div>
        <% end %>

        <!-- Page Header -->
        <header class="bg-white shadow-sm border-b border-gray-200">
          <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between">
              <h1 class="text-2xl font-bold text-gray-900">
                <%= content_for?(:page_title) ? yield(:page_title) : "Admin Dashboard" %>
              </h1>
              <div class="flex items-center space-x-4">
                <!-- Quick Actions -->
                <div class="hidden lg:flex items-center space-x-2">
                  <%= yield :header_actions %>
                </div>
              </div>
            </div>
          </div>
        </header>

        <!-- Page Content -->
        <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-50">
          <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            <%= yield %>
          </div>
        </main>
      </div>
    </div>

    <!-- Help Widget -->
    <%= render "shared/help_widget" %>
  </body>
</html>