<!DOCTYPE html>
<html class="h-full bg-white">
  <head>
    <title><%= @enterprise_group&.name || 'Enterprise' %> - SaaS App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="h-full">
    <div data-controller="sidebar">
      <!-- Off-canvas menu for mobile -->
      <div class="relative z-50 lg:hidden" role="dialog" aria-modal="true" data-sidebar-target="mobileMenu">
        <!-- Backdrop -->
        <div class="fixed inset-0 bg-gray-900/80 transition-opacity ease-linear duration-300" 
             data-sidebar-target="backdrop"
             data-action="click->sidebar#close"
             data-transition-enter="transition-opacity ease-linear duration-300"
             data-transition-enter-from="opacity-0"
             data-transition-enter-to="opacity-100"
             data-transition-leave="transition-opacity ease-linear duration-300"
             data-transition-leave-from="opacity-100"
             data-transition-leave-to="opacity-0"></div>

        <div class="fixed inset-0 flex">
          <!-- Mobile sidebar -->
          <div class="relative mr-16 flex w-full max-w-xs flex-1 transition ease-in-out duration-300 transform"
               data-sidebar-target="mobilePanel"
               data-transition-enter="transition ease-in-out duration-300 transform"
               data-transition-enter-from="-translate-x-full"
               data-transition-enter-to="translate-x-0"
               data-transition-leave="transition ease-in-out duration-300 transform"
               data-transition-leave-from="translate-x-0"
               data-transition-leave-to="-translate-x-full">
            
            <!-- Close button -->
            <div class="absolute top-0 left-full flex w-16 justify-center pt-5">
              <button type="button" class="-m-2.5 p-2.5" data-action="click->sidebar#close">
                <span class="sr-only">Close sidebar</span>
                <%= icon "x", class: "size-6 text-white" %>
              </button>
            </div>

            <!-- Sidebar component -->
            <div class="flex grow flex-col gap-y-5 overflow-y-auto bg-white px-6 pb-4">
              <div class="flex h-16 shrink-0 items-center">
                <span class="flex size-8 shrink-0 items-center justify-center rounded-lg border border-purple-200 bg-white text-xs font-medium text-purple-600">
                  <%= @enterprise_group.name.first.upcase %>
                </span>
                <span class="ml-3 text-lg font-semibold text-gray-900"><%= @enterprise_group.name %></span>
              </div>
              <nav class="flex flex-1 flex-col">
                <ul role="list" class="flex flex-1 flex-col gap-y-7">
                  <li>
                    <ul role="list" class="-mx-2 space-y-1">
                      <li>
                        <%= link_to enterprise_dashboard_path(enterprise_group_slug: @enterprise_group.slug), class: "group flex gap-x-3 rounded-md p-2 text-sm/6 font-semibold #{current_page?(enterprise_dashboard_path(enterprise_group_slug: @enterprise_group.slug)) ? 'bg-purple-50 text-purple-600' : 'text-gray-700 hover:text-purple-600 hover:bg-purple-50'}" do %>
                          <%= icon "house", class: "size-6 shrink-0 #{current_page?(enterprise_dashboard_path(enterprise_group_slug: @enterprise_group.slug)) ? 'text-purple-600' : 'text-gray-400 group-hover:text-purple-600'}" %>
                          Dashboard
                        <% end %>
                      </li>
                      <li>
                        <%= link_to profile_path(enterprise_group_slug: @enterprise_group.slug, id: current_user), class: "group flex gap-x-3 rounded-md p-2 text-sm/6 font-semibold #{request.path.include?('/profile') ? 'bg-purple-50 text-purple-600' : 'text-gray-700 hover:text-purple-600 hover:bg-purple-50'}" do %>
                          <%= icon "user", class: "size-6 shrink-0 #{request.path.include?('/profile') ? 'text-purple-600' : 'text-gray-400 group-hover:text-purple-600'}" %>
                          My Profile
                        <% end %>
                      </li>
                    </ul>
                  </li>
                  
                  <% if current_user.enterprise_group_role == 'admin' %>
                    <li>
                      <div class="text-xs/6 font-semibold text-gray-400">Administration</div>
                      <ul role="list" class="-mx-2 mt-2 space-y-1">
                        <li>
                          <%= link_to members_path(enterprise_group_slug: @enterprise_group.slug), class: "group flex gap-x-3 rounded-md p-2 text-sm/6 font-semibold #{request.path.include?('/members') ? 'bg-purple-50 text-purple-600' : 'text-gray-700 hover:text-purple-600 hover:bg-purple-50'}" do %>
                            <%= icon "users", class: "size-6 shrink-0 #{request.path.include?('/members') ? 'text-purple-600' : 'text-gray-400 group-hover:text-purple-600'}" %>
                            Members
                          <% end %>
                        </li>
                        <li>
                          <%= link_to billing_index_path(enterprise_group_slug: @enterprise_group.slug), class: "group flex gap-x-3 rounded-md p-2 text-sm/6 font-semibold #{request.path.include?('/billing') ? 'bg-purple-50 text-purple-600' : 'text-gray-700 hover:text-purple-600 hover:bg-purple-50'}" do %>
                            <%= icon "credit-card", class: "size-6 shrink-0 #{request.path.include?('/billing') ? 'text-purple-600' : 'text-gray-400 group-hover:text-purple-600'}" %>
                            Billing
                          <% end %>
                        </li>
                        <li>
                          <%= link_to settings_path(enterprise_group_slug: @enterprise_group.slug), class: "group flex gap-x-3 rounded-md p-2 text-sm/6 font-semibold #{request.path.include?('/settings') ? 'bg-purple-50 text-purple-600' : 'text-gray-700 hover:text-purple-600 hover:bg-purple-50'}" do %>
                            <%= icon "gear", class: "size-6 shrink-0 #{request.path.include?('/settings') ? 'text-purple-600' : 'text-gray-400 group-hover:text-purple-600'}" %>
                            Settings
                          <% end %>
                        </li>
                        <li>
                          <%= link_to enterprise_admin_notification_categories_path(enterprise_slug: @enterprise_group.slug), class: "group flex gap-x-3 rounded-md p-2 text-sm/6 font-semibold #{request.path.include?('/notification_categories') ? 'bg-purple-50 text-purple-600' : 'text-gray-700 hover:text-purple-600 hover:bg-purple-50'}" do %>
                            <%= icon "list-bullets", class: "size-6 shrink-0 #{request.path.include?('/notification_categories') ? 'text-purple-600' : 'text-gray-400 group-hover:text-purple-600'}" %>
                            Notification Categories
                          <% end %>
                        </li>
                      </ul>
                    </li>
                  <% end %>
                  
                  <li>
                    <div class="text-xs/6 font-semibold text-gray-400">Support</div>
                    <ul role="list" class="-mx-2 mt-2 space-y-1">
                      <li>
                        <a href="#" class="group flex gap-x-3 rounded-md p-2 text-sm/6 font-semibold text-gray-700 hover:text-purple-600 hover:bg-purple-50">
                          <%= icon "book-open", class: "size-6 shrink-0 text-gray-400 group-hover:text-purple-600" %>
                          Documentation
                        </a>
                      </li>
                      <li>
                        <a href="#" class="group flex gap-x-3 rounded-md p-2 text-sm/6 font-semibold text-gray-700 hover:text-purple-600 hover:bg-purple-50" data-controller="help-widget" data-action="click->help-widget#show">
                          <%= icon "lifebuoy", class: "size-6 shrink-0 text-gray-400 group-hover:text-purple-600" %>
                          Help Center
                        </a>
                      </li>
                    </ul>
                  </li>
                  
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>

      <!-- Static sidebar for desktop -->
      <div class="hidden lg:fixed lg:inset-y-0 lg:z-50 lg:flex lg:w-72 lg:flex-col">
        <!-- Sidebar component -->
        <div class="flex grow flex-col gap-y-5 overflow-y-auto border-r border-gray-200 bg-white px-6 pb-4">
          <div class="flex h-16 shrink-0 items-center">
            <span class="flex size-8 shrink-0 items-center justify-center rounded-lg border border-purple-200 bg-white text-xs font-medium text-purple-600">
              <%= @enterprise_group.name.first.upcase %>
            </span>
            <span class="ml-3 text-lg font-semibold text-gray-900"><%= @enterprise_group.name %></span>
          </div>
          <nav class="flex flex-1 flex-col">
            <ul role="list" class="flex flex-1 flex-col gap-y-7">
              <li>
                <ul role="list" class="-mx-2 space-y-1">
                  <li>
                    <%= link_to enterprise_root_path(@enterprise_group.slug), class: "group flex gap-x-3 rounded-md p-2 text-sm/6 font-semibold #{current_page?(enterprise_root_path(@enterprise_group.slug)) ? 'bg-purple-50 text-purple-600' : 'text-gray-700 hover:text-purple-600 hover:bg-purple-50'}" do %>
                      <%= icon "house", class: "size-6 shrink-0 #{current_page?(enterprise_root_path(@enterprise_group.slug)) ? 'text-purple-600' : 'text-gray-400 group-hover:text-purple-600'}" %>
                      Dashboard
                    <% end %>
                  </li>
                  <li>
                    <%= link_to profile_path(enterprise_group_slug: @enterprise_group.slug, id: current_user), class: "group flex gap-x-3 rounded-md p-2 text-sm/6 font-semibold #{request.path.include?('/profile') ? 'bg-purple-50 text-purple-600' : 'text-gray-700 hover:text-purple-600 hover:bg-purple-50'}" do %>
                      <%= icon "user", class: "size-6 shrink-0 #{request.path.include?('/profile') ? 'text-purple-600' : 'text-gray-400 group-hover:text-purple-600'}" %>
                      My Profile
                    <% end %>
                  </li>
                </ul>
              </li>
              
              <% if current_user.enterprise_group_role == 'admin' %>
                <li>
                  <div class="text-xs/6 font-semibold text-gray-400">Administration</div>
                  <ul role="list" class="-mx-2 mt-2 space-y-1">
                    <li>
                      <%= link_to members_path(enterprise_group_slug: @enterprise_group.slug), class: "group flex gap-x-3 rounded-md p-2 text-sm/6 font-semibold #{request.path.include?('/members') ? 'bg-purple-50 text-purple-600' : 'text-gray-700 hover:text-purple-600 hover:bg-purple-50'}" do %>
                        <%= icon "users", class: "size-6 shrink-0 #{request.path.include?('/members') ? 'text-purple-600' : 'text-gray-400 group-hover:text-purple-600'}" %>
                        Members
                      <% end %>
                    </li>
                    <li>
                      <%= link_to billing_index_path(enterprise_group_slug: @enterprise_group.slug), class: "group flex gap-x-3 rounded-md p-2 text-sm/6 font-semibold #{request.path.include?('/billing') ? 'bg-purple-50 text-purple-600' : 'text-gray-700 hover:text-purple-600 hover:bg-purple-50'}" do %>
                        <%= icon "credit-card", class: "size-6 shrink-0 #{request.path.include?('/billing') ? 'text-purple-600' : 'text-gray-400 group-hover:text-purple-600'}" %>
                        Billing
                      <% end %>
                    </li>
                    <li>
                      <%= link_to settings_path(enterprise_group_slug: @enterprise_group.slug), class: "group flex gap-x-3 rounded-md p-2 text-sm/6 font-semibold #{request.path.include?('/settings') ? 'bg-purple-50 text-purple-600' : 'text-gray-700 hover:text-purple-600 hover:bg-purple-50'}" do %>
                        <%= icon "gear", class: "size-6 shrink-0 #{request.path.include?('/settings') ? 'text-purple-600' : 'text-gray-400 group-hover:text-purple-600'}" %>
                        Settings
                      <% end %>
                    </li>
                    <li>
                      <%= link_to enterprise_admin_notification_categories_path(enterprise_slug: @enterprise_group.slug), class: "group flex gap-x-3 rounded-md p-2 text-sm/6 font-semibold #{request.path.include?('/notification_categories') ? 'bg-purple-50 text-purple-600' : 'text-gray-700 hover:text-purple-600 hover:bg-purple-50'}" do %>
                        <%= icon "list-bullets", class: "size-6 shrink-0 #{request.path.include?('/notification_categories') ? 'text-purple-600' : 'text-gray-400 group-hover:text-purple-600'}" %>
                        Notification Categories
                      <% end %>
                    </li>
                  </ul>
                </li>
              <% end %>
              
              <li>
                <div class="text-xs/6 font-semibold text-gray-400">Support</div>
                <ul role="list" class="-mx-2 mt-2 space-y-1">
                  <li>
                    <a href="#" class="group flex gap-x-3 rounded-md p-2 text-sm/6 font-semibold text-gray-700 hover:text-purple-600 hover:bg-purple-50">
                      <%= icon "book-open", class: "size-6 shrink-0 text-gray-400 group-hover:text-purple-600" %>
                      Documentation
                    </a>
                  </li>
                  <li>
                    <a href="#" class="group flex gap-x-3 rounded-md p-2 text-sm/6 font-semibold text-gray-700 hover:text-purple-600 hover:bg-purple-50" data-controller="help-widget" data-action="click->help-widget#show">
                      <%= icon "lifebuoy", class: "size-6 shrink-0 text-gray-400 group-hover:text-purple-600" %>
                      Help Center
                    </a>
                  </li>
                </ul>
              </li>
              
            </ul>
          </nav>
        </div>
      </div>

      <div class="lg:pl-72">
        <div class="sticky top-0 z-40 lg:mx-auto lg:max-w-7xl lg:px-8">
          <div class="flex h-16 items-center gap-x-4 border-b border-gray-200 bg-white px-4 shadow-xs sm:gap-x-6 sm:px-6 lg:px-0 lg:shadow-none">
            <button type="button" class="-m-2.5 p-2.5 text-gray-700 lg:hidden" data-action="click->sidebar#toggle">
              <span class="sr-only">Open sidebar</span>
              <%= icon "list", class: "size-6" %>
            </button>

            <!-- Separator -->
            <div class="h-6 w-px bg-gray-200 lg:hidden" aria-hidden="true"></div>

            <div class="flex flex-1 gap-x-4 self-stretch lg:gap-x-6 justify-end">
              <div class="flex items-center gap-x-4 lg:gap-x-6">
                <!-- Notification Center -->
                <%= render "shared/notification_center" %>

                <!-- Separator -->
                <div class="hidden lg:block lg:h-6 lg:w-px lg:bg-gray-200" aria-hidden="true"></div>

                <!-- Profile dropdown -->
                <%= render "shared/user_avatar_menu" %>
              </div>
            </div>
          </div>
        </div>

        <!-- Flash Messages -->
        <% if flash[:notice].present? || flash[:alert].present? %>
          <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <% if flash[:notice].present? %>
              <div class="mt-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
                <span class="block sm:inline"><%= flash[:notice] %></span>
              </div>
            <% end %>
            
            <% if flash[:alert].present? %>
              <div class="mt-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                <span class="block sm:inline"><%= flash[:alert] %></span>
              </div>
            <% end %>
          </div>
        <% end %>

        <main class="py-0">
          <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <%= yield %>
          </div>
        </main>
      </div>
    </div>

    <!-- Help Widget -->
    <%= render "shared/help_widget" %>
  </body>
</html>