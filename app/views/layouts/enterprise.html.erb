<!DOCTYPE html>
<html>
  <head>
    <title><%= @enterprise_group&.name || 'Enterprise' %> - SaaS App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50">
    <!-- Simple Top Navigation -->
    <%= render "shared/simple_top_navigation" %>
    
    <div class="flex h-screen pt-16">
      <!-- Sidebar -->
      <div class="bg-purple-900 text-white w-64 flex flex-col fixed inset-y-0 left-0 transform -translate-x-full md:relative md:translate-x-0 transition duration-200 ease-in-out" id="sidebar">
        <!-- App Header -->
        <div class="flex h-16 shrink-0 items-center px-6">
          <span class="text-xl font-semibold text-white">SaaS App</span>
        </div>

        <!-- Navigation -->
        <nav class="flex flex-1 flex-col px-6 pb-4">
          <ul role="list" class="flex flex-1 flex-col gap-y-7">
            <li>
              <ul role="list" class="-mx-2 space-y-1">
                <%= link_to enterprise_root_path(@enterprise_group.slug), class: "#{current_page?(enterprise_root_path(@enterprise_group.slug)) ? 'bg-purple-800 text-white' : 'text-purple-200 hover:bg-purple-800 hover:text-white'} group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6" do %>
                  <%= icon "house", class: "h-6 w-6 shrink-0" %>
                  Dashboard
                <% end %>
          
                <%= link_to profile_path(enterprise_group_slug: @enterprise_group.slug, id: current_user), class: "#{request.path.include?('/profile') ? 'bg-purple-800 text-white' : 'text-purple-200 hover:bg-purple-800 hover:text-white'} group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6" do %>
                  <%= icon "user", class: "h-6 w-6 shrink-0" %>
                  My Profile
                <% end %>
              </ul>
            </li>
          
            <% if current_user.enterprise_group_role == 'admin' %>
              <li>
                <div class="text-xs font-semibold leading-6 text-purple-300">Administration</div>
                <ul role="list" class="-mx-2 mt-2 space-y-1">
              
                  <%= link_to enterprise_admin_root_path(enterprise_slug: @enterprise_group.slug), class: "#{request.path.include?('/admin') && current_page?(enterprise_admin_root_path(enterprise_slug: @enterprise_group.slug)) ? 'bg-purple-800 text-white' : 'text-purple-200 hover:bg-purple-800 hover:text-white'} group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6" do %>
                    <%= icon "shield-check", class: "h-6 w-6 shrink-0" %>
                    Admin Dashboard
                  <% end %>
              
                  <%= link_to enterprise_admin_members_path(enterprise_slug: @enterprise_group.slug), class: "#{request.path.include?('/members') ? 'bg-purple-800 text-white' : 'text-purple-200 hover:bg-purple-800 hover:text-white'} group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6" do %>
                    <%= icon "users", class: "h-6 w-6 shrink-0" %>
                    Members
                  <% end %>
              
                  <%= link_to enterprise_admin_billing_index_path(enterprise_slug: @enterprise_group.slug), class: "#{request.path.include?('/billing') ? 'bg-purple-800 text-white' : 'text-purple-200 hover:bg-purple-800 hover:text-white'} group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6" do %>
                    <%= icon "credit-card", class: "h-6 w-6 shrink-0" %>
                    Billing
                  <% end %>
              
                  <%= link_to enterprise_admin_settings_path(enterprise_slug: @enterprise_group.slug), class: "#{request.path.include?('/settings') ? 'bg-purple-800 text-white' : 'text-purple-200 hover:bg-purple-800 hover:text-white'} group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6" do %>
                    <%= icon "gear", class: "h-6 w-6 shrink-0" %>
                    Settings
                  <% end %>
                </ul>
              </li>
            <% end %>
          
            <li>
              <div class="text-xs font-semibold leading-6 text-purple-300">Support</div>
              <ul role="list" class="-mx-2 mt-2 space-y-1">
                <li>
                  <a href="#" class="text-purple-200 hover:bg-purple-800 hover:text-white group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6">
                    <%= icon "book-open", class: "h-6 w-6 shrink-0" %>
                    Documentation
                  </a>
                </li>
                <li>
                  <a href="#" class="text-purple-200 hover:bg-purple-800 hover:text-white group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6" data-controller="help-widget" data-action="click->help-widget#show">
                    <%= icon "lifebuoy", class: "h-6 w-6 shrink-0" %>
                    Help Center
                  </a>
                </li>
              </ul>
            </li>
          </ul>
        </nav>
      </div>

      <!-- Main Content -->
      <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Mobile menu button -->
        <div class="md:hidden fixed top-16 left-0 z-40">
          <button data-controller="sidebar" data-action="click->sidebar#toggle" class="m-2 p-2 rounded-md bg-purple-900 text-purple-200 hover:text-white hover:bg-purple-800 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white">
            <span class="sr-only">Open sidebar</span>
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
        
        <!-- Flash Messages -->
        <% if flash[:notice].present? %>
          <div class="mx-4 mt-4">
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
              <span class="block sm:inline"><%= flash[:notice] %></span>
            </div>
          </div>
        <% end %>
        
        <% if flash[:alert].present? %>
          <div class="mx-4 mt-4">
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
              <span class="block sm:inline"><%= flash[:alert] %></span>
            </div>
          </div>
        <% end %>

        <!-- Page Header -->
        <header class="bg-white shadow-sm border-b border-gray-200">
          <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between">
              <h1 class="text-2xl font-bold text-gray-900">
                <%= content_for?(:page_title) ? yield(:page_title) : "Enterprise Dashboard" %>
              </h1>
              <div class="flex items-center space-x-4">
                <!-- Quick Actions -->
                <div class="hidden lg:flex items-center space-x-2">
                  <%= yield :header_actions %>
                </div>
              </div>
            </div>
          </div>
        </header>

        <!-- Page Content -->
        <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-50">
          <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            <%= yield %>
          </div>
        </main>
      </div>
    </div>

    <!-- Help Widget -->
    <%= render "shared/help_widget" %>
  </body>
</html>