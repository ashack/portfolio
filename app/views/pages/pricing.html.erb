<div class="max-w-7xl mx-auto">
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Simple, Transparent Pricing</h1>
    <p class="text-xl text-gray-600">Choose the plan that works best for you</p>
  </div>
  
  <div class="mb-12">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Individual Plans</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <% @individual_plans.each do |plan| %>
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="px-6 py-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-4"><%= plan.name %></h3>
            <p class="text-4xl font-bold text-gray-900 mb-6">
              <%= plan.formatted_price %>
            </p>
            <ul class="space-y-3 mb-8">
              <% plan.features.each do |feature| %>
                <li class="flex items-center">
                  <svg class="h-5 w-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <%= feature.humanize %>
                </li>
              <% end %>
            </ul>
            <% if user_signed_in? && current_user.direct? %>
              <%= link_to "Select Plan", "#", class: "block w-full text-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
            <% else %>
              <%= link_to "Get Started", new_user_registration_path, class: "block w-full text-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  
  <div>
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Team Plans</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <% @team_plans.each do |plan| %>
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="px-6 py-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-4"><%= plan.name %></h3>
            <p class="text-4xl font-bold text-gray-900 mb-2">
              <%= plan.formatted_price %>
            </p>
            <p class="text-gray-600 mb-6">Up to <%= plan.max_team_members %> members</p>
            <ul class="space-y-3 mb-8">
              <% plan.features.each do |feature| %>
                <li class="flex items-center">
                  <svg class="h-5 w-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <%= feature.humanize %>
                </li>
              <% end %>
            </ul>
            <p class="text-center text-gray-600">Contact admin to create a team</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>