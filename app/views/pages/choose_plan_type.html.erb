<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      Choose Your Plan Type
    </h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      Select the type of account that best fits your needs
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-2xl">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
        
        <!-- Individual Plan Card -->
        <div class="relative rounded-lg border border-gray-200 bg-white p-6 shadow-sm hover:shadow-lg transition-shadow">
          <div class="flex flex-col h-full">
            <div>
              <h3 class="text-lg font-medium text-gray-900">Individual Plans</h3>
              <p class="mt-2 text-sm text-gray-500">
                Perfect for freelancers, consultants, and individuals who need professional tools.
              </p>
            </div>
            
            <ul class="mt-6 space-y-3 flex-grow">
              <li class="flex items-start">
                <svg class="h-5 w-5 text-green-500 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="ml-3 text-sm text-gray-700">Personal workspace</span>
              </li>
              <li class="flex items-start">
                <svg class="h-5 w-5 text-green-500 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="ml-3 text-sm text-gray-700">Individual billing</span>
              </li>
              <li class="flex items-start">
                <svg class="h-5 w-5 text-green-500 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="ml-3 text-sm text-gray-700">Quick setup</span>
              </li>
            </ul>
            
            <div class="mt-8">
              <%= link_to "Choose Individual Plan", new_user_registration_path(plan_segment: "individual"), 
                  class: "block w-full text-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
            </div>
          </div>
        </div>

        <!-- Team Plan Card -->
        <div class="relative rounded-lg border border-gray-200 bg-white p-6 shadow-sm hover:shadow-lg transition-shadow">
          <div class="flex flex-col h-full">
            <div>
              <h3 class="text-lg font-medium text-gray-900">Team Plans</h3>
              <p class="mt-2 text-sm text-gray-500">
                Designed for teams that need to collaborate and manage multiple users.
              </p>
            </div>
            
            <ul class="mt-6 space-y-3 flex-grow">
              <li class="flex items-start">
                <svg class="h-5 w-5 text-green-500 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="ml-3 text-sm text-gray-700">Multiple team members</span>
              </li>
              <li class="flex items-start">
                <svg class="h-5 w-5 text-green-500 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="ml-3 text-sm text-gray-700">Centralized billing</span>
              </li>
              <li class="flex items-start">
                <svg class="h-5 w-5 text-green-500 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="ml-3 text-sm text-gray-700">Team collaboration features</span>
              </li>
            </ul>
            
            <div class="mt-8">
              <%= link_to "Choose Team Plan", new_user_registration_path(plan_segment: "team"), 
                  class: "block w-full text-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
            </div>
          </div>
        </div>
      </div>

      <!-- Enterprise Section -->
      <div class="mt-8 rounded-lg border border-gray-200 bg-gray-50 p-6">
        <div class="text-center">
          <h3 class="text-lg font-medium text-gray-900">Need an Enterprise Solution?</h3>
          <p class="mt-2 text-sm text-gray-500">
            Our enterprise plans offer custom features, dedicated support, and flexible pricing for large organizations.
          </p>
          <div class="mt-4">
            <%= link_to "Contact Sales", contact_sales_path, 
                class: "inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>